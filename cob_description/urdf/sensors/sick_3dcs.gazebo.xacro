<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro name="sick_3dcs_gazebo" params="name ros_topic">
    <gazebo reference="${name}_frame">
      <sensor type="depth" name="${name}_frame_sensor">
        <always_on>true</always_on>
        <update_rate>30.0</update_rate>
        <camera>
          <horizontal_fov>${74.0*M_PI/180.0}</horizontal_fov>
          <image>
            <format>B8G8R8</format>
            <width>176</width>
            <height>144</height>
          </image>
          <clip>
            <near>0.15</near>
            <far>1.0</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.0</stddev>
          </noise>
        </camera>
        <plugin name="${name}_frame_controller" filename="libgazebo_ros_depth_camera.so">
          <updateRate>25.0</updateRate>
          <cameraName>${ros_topic}</cameraName>
          <frameName>${name}_optical_frame</frameName>
          <!--imageTopicName>ir/image_raw</imageTopicName-->
          <!--cameraInfoTopicName>ir/camera_info</cameraInfoTopicName-->
          <pointCloudTopicName>depth/points</pointCloudTopicName>
          <depthImageTopicName>depth/image</depthImageTopicName>
          <depthImageCameraInfoTopicName>depth/camera_info</depthImageCameraInfoTopicName>
          <pointCloudCutoff>0.5</pointCloudCutoff>
          <pointCloudCutoffMax>5.0</pointCloudCutoffMax>
          <distortionK1>0.0</distortionK1>
          <distortionK2>0.0</distortionK2>
          <distortionK3>0.0</distortionK3>
          <distortionT1>0.0</distortionT1>
          <distortionT2>0.0</distortionT2>
          <CxPrime>0.0</CxPrime>
          <Cx>0.0</Cx>
          <Cy>0.0</Cy>
          <focalLength>0.0</focalLength>
        </plugin>
      </sensor>
      <material>IPA/LightGrey</material>
    </gazebo>
  </xacro:macro>

</robot>

