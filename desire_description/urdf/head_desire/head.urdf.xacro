<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find desire_description)/urdf/head_desire/head.gazebo.xacro" />
  <xacro:include filename="$(find desire_description)/urdf/head_desire/head.transmission.xacro" />
  <xacro:include filename="$(find cob_description)/urdf/sensors/prosilica.urdf.xacro" />
  <!--include filename="$(find cob_description)/urdf/sensors/tof.urdf.xacro" /-->

  <xacro:macro name="head_desire" params="name parent *origin">

    <!-- joint between base_link and head_axis_link -->
    <joint name="${name}_pan_joint" type="revolute">
      <insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_pan_link"/>
      <axis xyz="0 0 1" />
      <dynamics damping="0.1" />
      <calibration rising="${head_pan_ref}"/>
      <limit effort="100" lower="-1.4" upper="1.4" velocity="0.5"/>
    </joint>

    <link name="${name}_pan_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.01 0.12"/>
        </geometry>
        <material name="IPA/DarkGrey" />
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <box size="0.01 0.01 0.12"/>
        </geometry>
      </collision>
    </link>
    
    <joint name="${name}_tilt_joint" type="revolute">
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <parent link="${name}_pan_link"/>
      <child link="${name}_tilt_link"/>
      <axis xyz="0 0 1" />
      <dynamics damping="0.1" />
      <calibration rising="${head_tilt_ref}"/>
      <limit effort="100" lower="-0.25" upper="0.35" velocity="0.5"/>
    </joint>
    
    <link name="${name}_tilt_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://desire_description/meshes/head_desire/head.stl"/>
        </geometry>
        <material name="IPA/DarkGrey" />
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://desire_description/meshes/head_desire/head.stl"/>
        </geometry>
      </collision>
    </link>

    <!-- right camera -->
    <xacro:cob_prosilica_v0 name="${name}_color_camera_r" ros_topic="stereo/right"  parent="${name}_tilt_link">
      <origin xyz="${cam_r_x} ${cam_r_y} ${cam_r_z}" rpy="${cam_r_roll} ${cam_r_pitch} ${cam_r_yaw}" />  
    </xacro:cob_prosilica_v0>

    <!-- left camera -->
    <xacro:cob_prosilica_v0 name="${name}_color_camera_l" ros_topic="stereo/left" parent="${name}_color_camera_r_link">
      <origin xyz="${cam_l_x} ${cam_l_y} ${cam_l_z}" rpy="${cam_l_roll} ${cam_l_pitch} ${cam_l_yaw}" />
    </xacro:cob_prosilica_v0>

    <!-- tof -->
    <xacro:cob_tof_v0 name="${name}_tof" parent="${name}_color_camera_r_link">
      <origin xyz="${tof_x} ${tof_y} ${tof_z}" rpy="${tof_roll} ${tof_pitch} ${tof_yaw}" />
    </xacro:cob_tof_v0>

    <!-- extensions -->
    <xacro:head_desire_gazebo_v0 name="${name}" />
    <xacro:head_desire_transmission_v0 name="${name}" />

  </xacro:macro>

</robot>


